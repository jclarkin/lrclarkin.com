---
// Generated by scripts/fetch-villagers.js - run it to get all ~400+ villagers
import villagersData from '../data/villagers.json';
const villagers = villagersData as { name: string; filename: string }[];
---

<section class="carousel-section">
  <div class="carousel-wrapper">
    <div class="carousel-track" id="carousel-track" style="--scroll-duration: 90s; --scroll-direction: normal; --scroll-play-state: running">
      {villagers.map(({ name, filename }) => (
        <div class="carousel-item">
          <img
            src={`/images/villagers/${filename}`}
            alt={`${name} - Animal Crossing villager`}
            loading="lazy"
          />
          <span class="villager-name">{name}</span>
        </div>
      ))}
      {/* Duplicate set for seamless infinite scroll */}
      {villagers.map(({ name, filename }) => (
        <div class="carousel-item">
          <img
            src={`/images/villagers/${filename}`}
            alt={`${name} - Animal Crossing villager`}
            loading="lazy"
          />
          <span class="villager-name">{name}</span>
        </div>
      ))}
    </div>
  </div>
  <div class="carousel-controls">
    <button type="button" class="speed-btn" data-speed="2">2×</button>
    <button type="button" class="speed-btn active" data-speed="1">1×</button>
    <button type="button" class="speed-btn" data-speed="0">0</button>
    <button type="button" class="speed-btn" data-speed="-1">−1×</button>
    <button type="button" class="speed-btn" data-speed="-2">−2×</button>
  </div>
</section>

<script>
  const track = document.getElementById('carousel-track');
  const controls = track.closest('.carousel-section')?.querySelectorAll('.speed-btn') ?? [];
  if (track && controls.length) {
    const baseDuration = 90;
    controls.forEach((btn) => {
      btn.addEventListener('click', () => {
        const speed = parseInt(btn.dataset.speed ?? '1', 10);
        controls.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');
        if (speed === 0) {
          track.style.setProperty('--scroll-play-state', 'paused');
        } else {
          track.style.setProperty('--scroll-play-state', 'running');
          const abs = Math.abs(speed);
          track.style.setProperty('--scroll-duration', `${baseDuration / abs}s`);
          track.style.setProperty('--scroll-direction', speed > 0 ? 'normal' : 'reverse');
        }
      });
    });
  }
</script>

<style>
  .carousel-section {
    margin: 3rem 0;
    overflow: hidden;
  }

  .carousel-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .carousel-track {
    display: flex;
    gap: 2rem;
    animation: scroll var(--scroll-duration, 90s) linear infinite;
    animation-direction: var(--scroll-direction, normal);
    animation-play-state: var(--scroll-play-state, running);
    width: max-content;
  }

  .carousel-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .speed-btn {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1a3d5c;
    background: rgba(26, 61, 92, 0.15);
    border: 1px solid rgba(26, 61, 92, 0.3);
    border-radius: 8px;
    padding: 0.4rem 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .speed-btn:hover {
    background: rgba(26, 61, 92, 0.25);
  }

  .speed-btn.active {
    background: #2e5a8a;
    color: #fff;
    border-color: #2e5a8a;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  .carousel-item {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .carousel-item img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.1);
    transition: transform 0.2s ease;
  }

  .carousel-item:hover img {
    transform: scale(1.1);
  }

  .villager-name {
    font-size: 0.75rem;
    font-weight: 500;
    color: #1a3d5c;
    text-align: center;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .carousel-item img {
      width: 64px;
      height: 64px;
    }

    .villager-name {
      font-size: 0.65rem;
    }

    .carousel-track {
      gap: 1.5rem;
    }
  }
</style>
