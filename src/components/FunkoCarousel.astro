---
// Generated by scripts/fetch-funko-hp.js - run it to get Harry Potter Funko images
import funkoData from '../data/funko-hp.json';
const funko = funkoData as { name: string; filename: string }[];
---

<section class="funko-carousel-section">
  <h2 class="funko-title">Harry Potter Funko Pop!</h2>
  <div class="carousel-wrapper">
    <div class="carousel-track" id="funko-carousel-track" style="--scroll-duration: 90s; --scroll-direction: normal; --scroll-play-state: running">
      {funko.map(({ name, filename }) => (
        <div class="carousel-item">
          <img
            src={`/images/funko-hp/${encodeURIComponent(filename)}`}
            alt={`${name} - Harry Potter Funko Pop!`}
            loading="lazy"
          />
          <span class="item-name">{name}</span>
        </div>
      ))}
      {funko.map(({ name, filename }) => (
        <div class="carousel-item">
          <img
            src={`/images/funko-hp/${encodeURIComponent(filename)}`}
            alt={`${name} - Harry Potter Funko Pop!`}
            loading="lazy"
          />
          <span class="item-name">{name}</span>
        </div>
      ))}
    </div>
  </div>
  <div class="carousel-controls">
    <button type="button" class="speed-btn" data-speed="2">2×</button>
    <button type="button" class="speed-btn active" data-speed="1">1×</button>
    <button type="button" class="speed-btn" data-speed="0">0</button>
    <button type="button" class="speed-btn" data-speed="-1">−1×</button>
    <button type="button" class="speed-btn" data-speed="-2">−2×</button>
  </div>
</section>

<script>
  const track = document.getElementById('funko-carousel-track');
  const controls = track?.closest('.funko-carousel-section')?.querySelectorAll('.speed-btn') ?? [];
  if (track && controls.length) {
    const baseDuration = 90;
    controls.forEach((btn) => {
      btn.addEventListener('click', () => {
        const speed = parseInt(btn.dataset.speed ?? '1', 10);
        controls.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');
        if (speed === 0) {
          track.style.setProperty('--scroll-play-state', 'paused');
        } else {
          track.style.setProperty('--scroll-play-state', 'running');
          const abs = Math.abs(speed);
          track.style.setProperty('--scroll-duration', `${baseDuration / abs}s`);
          track.style.setProperty('--scroll-direction', speed > 0 ? 'normal' : 'reverse');
        }
      });
    });
  }
</script>

<style>
  .funko-carousel-section {
    margin: 3rem 0;
    overflow: hidden;
  }

  .funko-title {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    font-weight: 600;
    color: #1a3d5c;
    text-align: center;
    margin-bottom: 1rem;
  }

  .funko-carousel-section .carousel-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .funko-carousel-section .carousel-track {
    display: flex;
    gap: 2rem;
    animation: funko-scroll var(--scroll-duration, 90s) linear infinite;
    animation-direction: var(--scroll-direction, normal);
    animation-play-state: var(--scroll-play-state, running);
    width: max-content;
  }

  .funko-carousel-section .carousel-track:hover {
    animation-play-state: paused;
  }

  .funko-carousel-section .carousel-item {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .funko-carousel-section .carousel-item img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    border-radius: 12px;
    background: rgba(55, 39, 89, 0.15);
    transition: transform 0.2s ease;
  }

  .funko-carousel-section .carousel-item:hover img {
    transform: scale(1.1);
  }

  .funko-carousel-section .item-name {
    font-size: 0.7rem;
    font-weight: 500;
    color: #1a3d5c;
    text-align: center;
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .funko-carousel-section .carousel-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .funko-carousel-section .speed-btn {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1a3d5c;
    background: rgba(55, 39, 89, 0.15);
    border: 1px solid rgba(55, 39, 89, 0.3);
    border-radius: 8px;
    padding: 0.4rem 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .funko-carousel-section .speed-btn:hover {
    background: rgba(55, 39, 89, 0.25);
  }

  .funko-carousel-section .speed-btn.active {
    background: #5c3d7a;
    color: #fff;
    border-color: #5c3d7a;
  }

  @keyframes funko-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @media (max-width: 768px) {
    .funko-carousel-section .carousel-item img {
      width: 64px;
      height: 64px;
    }

    .funko-carousel-section .item-name {
      font-size: 0.6rem;
      max-width: 70px;
    }

    .funko-carousel-section .carousel-track {
      gap: 1.5rem;
    }
  }
</style>
